<div>
  <%= form.label :username %><br>
  <%= form.text_field :username %>
  <% user.errors.full_messages_for(:username).each do |message| %>
    <div style="color: #B00100"><%= message %></div>
  <% end %>
</div>
<br>
<div>
  <%= form.label 'password (optional)' %><br>
  <%= form.password_field :password %>
  <div style="color: #B00100"><%= user.errors.full_messages_for(:password).first %></div>
</div>
<br>
<div>
  <%= form.label :password_confirmation %><br>
  <%= form.password_field :password_confirmation %>
  <div style="color: #B00100"><%= user.errors.full_messages_for(:password_confirmation).first %></div>
</div>
